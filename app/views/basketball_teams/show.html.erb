<!-- app/views/basketball_teams/show.html.erb -->
<div class="container mt-5">
  <h2>Basketball Team Details</h2>

  <div class="card">
    <div class="card-body">
      <h3 class="card-title"><%= @basketball_team.name %></h3>
      <p><strong>City:</strong> <%= @basketball_team.type %></p>

      <%= link_to 'Edit', edit_basketball_team_path(@basketball_team), class: 'btn btn-warning' %>
      <%= button_to 'Delete', basketball_team_path(@basketball_team), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      <%= button_to 'Back', dashboard_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
