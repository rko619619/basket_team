<!-- app/views/admins/dashboard.html.erb -->
<div class="container mt-5">
  <h2>Welcome to the Admin Dashboard</h2>

  <p>
    <%= button_to "Log out", destroy_admin_session_path, data: { turbo_method: :delete }, class: "btn btn-danger", method: :delete %>
  </p>

  <%= link_to 'Add New Basketball Team', new_basketball_team_path, class: 'btn btn-primary mb-3' %>

  <h3>Basketball Teams</h3>
  <% if @basketball_teams.present? %>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>City</th>
        <th>Championships</th>
        <th colspan="3">Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @basketball_teams.each do |team| %>
        <tr>
          <td><%= team.name %></td>
          <td><%= team.city %></td>
          <td><%= team.championships %></td>
          <td><%= link_to 'Show', basketball_team_path(team), class: 'btn btn-info btn-sm' %></td>
          <td><%= link_to 'Edit', edit_basketball_team_path(team), class: 'btn btn-warning btn-sm' %></td>
          <td>
            <%= button_to 'Delete', team, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No basketball teams available.</p>
  <% end %>
</div>
