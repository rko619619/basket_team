<div class="card mb-4">
  <div class="card-header bg-success text-white">
    <h4 class="mb-0">Добавить нового игрока</h4>
  </div>
  <div class="card-body">
    <%= form_with model: @player, url: basketball_team_players_path(@basketball_team), local: true, html: { multipart: true } do |form| %>
      <div class="row">
        <div class="col-md-6 mb-3">
          <div class="form-group">
            <%= form.label :last_name, "Фамилия игрока" %>
            <%= form.text_field :last_name, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6 mb-3">
          <div class="form-group">
            <%= form.label :first_name, "Имя игрока" %>
            <%= form.text_field :first_name, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <div class="form-group">
            <%= form.label :birthdate, "Дата рождения" %>
            <%= form.date_field :birthdate, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6 mb-3">
          <div class="form-group">
            <%= form.label :license_number, "Номер лицензии" %>
            <%= form.text_field :license_number, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <div class="form-group">
            <%= form.label :citizenship_photo, "Баскетбольное гражданство (Фото)" %>
            <%= form.file_field :citizenship_photo, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6 mb-3">
          <div class="form-group">
            <%= form.label :jersey_number, "Игровой номер" %>
            <%= form.text_field :jersey_number, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <div class="form-group">
            <%= form.label :photo, "Фото игрока" %>
            <%= form.file_field :photo, class: "form-control" %>
          </div>
        </div>

        <div class="col-md-6 mb-3">
          <div class="form-group">
            <%= form.label :color, "Обозначить игрока" %>
            <%= form.select :color, options_for_select([['Без цвета', ''], ['Красный', 'red'], ['Зеленый', 'green'], ['Желтый', 'yellow']]), { include_blank: false }, class: "form-control" %>
          </div>
        </div>
      </div>
      <%= form.submit "Добавить игрока", class: "btn btn-success btn-block" %>
    <% end %>
  </div>
</div>
