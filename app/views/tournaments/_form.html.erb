<!-- app/views/basketball_teams/_form.html.erb -->
<div class="card shadow-sm">
  <div class="card-body">
    <%= form_with(model: tournament, local: false, class: "needs-validation") do |form| %>
      <div class="mb-3">
        <%= form.label :'Название турнира', class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control', required: true %>
        <div class="invalid-feedback">
          Название турнирова
        </div>
      </div>

      <%= form.submit 'Сохранить', class: 'btn btn-primary w-100' %>
    <% end %>
  </div>
</div>
